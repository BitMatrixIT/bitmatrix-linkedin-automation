{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs22.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/scrape-content",
      "schedule": "0 9 * * 1,3,5"
    }
  ],
  "regions": ["lhr1"],
  "env": {
    "NODE_VERSION": "22.12.0"
  },
  "build": {
    "env": {
      "NODE_VERSION": "22.12.0"
    }
  }
}
